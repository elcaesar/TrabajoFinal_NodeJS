<div class="container mt-3">
  <div class="row">
    <div class="col-8 shadow-lg p-3 mb-5 bg-white rounded">
      {{#each productsList}}
        <div class="card" style="width: 18rem;">
          <img src="{{imgURL}}" class="card-img-top" alt="book image">
          <div class="card-body">
            <h5 class="card-title">{{productsList.nombre}}</h5>
            <p class="card-text">
              <b>Categoria: </b> {{productsList.categoria}}<br>
              <b>Precio: $</b> {{productsList.precio}}<br>
              <b>Stock: </b> {{productsList.precio}} <p> unidades</p><br>
            </p>
            <a href="#" class="btn btn-primary">Comprar</a>
          </div>
        </div>
      {{/each}}
    </div>

    <div class="col-4 shadow-lg p-3 mb-5 bg-white rounded">
      <h3 style="color: blue;">Centro de Mensajes</h3>
      <div id="mensajes" class="my-3"></div>
      <hr>
      <div class="form-group">
        <input type="email" id="usermail" class="form-control" placeholder="email usuario">
        <div class="invalid-feedback"></div>
      </div>
      <div class="form-group">
          <input type="text" id="mensaje" class="form-control" placeholder="Ingrese un mensaje">
          <div class="invalid-feedback"></div>
      </div>
      <div class="form-group mt-3">
          <input type="button" class="btn btn-primary" value="Enviar" id="btnSendMsg">
      </div>
    </div>
  </div>
</div>

    